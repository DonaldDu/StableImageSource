<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <com.dhy.stableimagesourceDemo.IncludeLayout
        android:id="@+id/upload_image_item0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="${type=1}"
        app:exLayout="@layout/upload_image_item"
        tools:contentDescription="${type=2}" />

    <include
        android:id="@+id/upload_image_item2"
        layout="@layout/upload_image_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:contentDescription="${type=2}" />

    <include
        layout="@layout/upload_image_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="${type=3}" />
</LinearLayout>