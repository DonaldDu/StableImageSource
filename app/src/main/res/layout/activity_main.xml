<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#E35C5C"
        app:failureImage="@drawable/load_image_failed"
        app:failureImageScaleType="centerCrop"
        app:placeholderImage="@drawable/add_bg_big" />

    <Button
        android:id="@+id/btReselect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重新选择" />

    <Button
        android:id="@+id/btDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清理缓存" />

    <Button
        android:id="@+id/btMultipleImagesActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MultipleImagesActivity"
        android:textAllCaps="false" />

</LinearLayout>